<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="blue" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" class="brand-logo"> @Html.ActionLink("Vtour", "Index", "Home") </a>            
            <ul class="right hide-on-med-and-down white-text">
                <li>@Html.ActionLink("Tours", "About", "Home")</li>
                <li>@Html.ActionLink("Maps", "About", "Home")</li>
                <li>@Html.ActionLink("Galery", "Index", "Galery")</li>
                <li>
    @Html.Partial("_LoginPartial")
                </li>
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()

        <footer class="page-footer teal">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h5 class="white-text">Company Bio</h5>
                        <p class="grey-text text-lighten-4">We are a team of college students working on this project like it's our full time job.</p>

                    </div>
                    <div class="col l3 s12">
                        <h5 class="white-text">Settings</h5>
                        <ul>
                            <li><a class="white-text" href="#!">Link 2</a></li>
                        </ul>
                    </div>
                    <div class="col l3 s12">
                        <h5 class="white-text">Connect</h5>
                        <ul>
                            <li><a class="white-text" href="#!">Link 2</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright white-text">
                <div class="container" style="color:black">
                    <a>2017</a>
                </div>
            </div>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

</body>
</html>

